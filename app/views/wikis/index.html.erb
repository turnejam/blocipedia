<h1>Wikis</h2>

  <div class="row">
    <div class="col-md-8">
      <h2> Public Wikis </h4>
        <% @wikis.each do |wiki| %>
        <% if !wiki.private? %>
        <h4> <%= link_to wiki.title, wiki %> </h4>
        <% end %>
        <% end %>
        <% if (current_user.admin? || current_user.premium?) %>
        <h2> Private Wikis</h4>
          <% @wikis.each do |wiki| %>
          <% if wiki.private? %>
          <h4> <%= link_to wiki.title, wiki %> </h4>
          <% end %>
          <% end %>
          <%end %>
        </div>
        <% if policy(@wikis).create? %>
        <div class='col-md-4'>
          <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>
