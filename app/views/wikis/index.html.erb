<h1>Wikis</h2>

<div class="row">
  <div class="col-md-8">
      <% @wikis.each do |wiki| %>
        <h4> <%= link_to wiki.title, wiki %> </h4>
      <% end %>
    </div>
    <% if user_is_authorized_to_create? %>
    <div class='col-md-4'>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
