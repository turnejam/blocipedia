<h1>
  <%= @wiki.title %> <br>
</h1>

<div class ="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
  </div>
  <div class='col-md-4'>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% if policy(@wiki).destroy? %>
    <%= link_to "Delete Post", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <% end %>
  </div>
</div>

<% @wiki.collaborators.each do |collaborator| %>
<div>
  <%= User.find_by_id(collaborator.user_id).email %>
  <%= link_to "Remove Collaborator", collaborator_path(id: collaborator.id), class: 'btn btn-danger delete', method: :delete, data: {confirm: 'Are you sure you want to remove this collaborator?'} %>
</div>
<% end %>
